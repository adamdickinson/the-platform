{
  "name": "@adamdickinson/the-platform-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "bili",
    "start": "ts-node src/index.ts",
    "watch": "nodemon",
    "serve": "./scripts/start.sh",
    "deploy": "yarn build && rsync -avz --exclude-from=.rsyncignore * kreuzberg:api && echo 'cd api; yarn serve' | ssh -t kreuzberg"
  },
  "dependencies": {
    "apollo-server": "^2.25.4",
    "bili": "^4.9.1",
    "graphql": "^15.0.0",
    "lodash": "^4.17.15",
    "store": "^2.0.12",
    "uuid": "^7.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.3",
    "rollup-plugin-typescript2": "^0.27.0",
    "ts-node": "^8.9.0",
    "typescript": "^3.8.3"
  },
  "nodemonConfig": {
    "ignore": [
      "**/*.test.ts",
      "**/*.spec.ts",
      ".git",
      "node_modules"
    ],
    "watch": [
      "src"
    ],
    "exec": "yarn start",
    "ext": "ts"
  }
}
